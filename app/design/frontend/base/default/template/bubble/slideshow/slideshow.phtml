$_frontId = 'bubble-slideshow-front-' . $_id;
?>
<?php if ($_images->count()): ?>
    <div class="widget">
        <?php if ($this->getTitle()): ?>
            <div class="widget-title">
                <h2><?php echo $this->__($this->getTitle()); ?></h2>
