<?xml version="1.0"?>
<config>
    <modules>
        <Bubble_Slideshow>
            <version>1.0.0</version>
        </Bubble_Slideshow>
    </modules>
    <global>
        <helpers>
            <bubble_slideshow>
                <class>Bubble_Slideshow_Helper</class>
            </bubble_slideshow>
        </helpers>
        <blocks>
            <bubble_slideshow>
                <class>Bubble_Slideshow_Block</class>
            </bubble_slideshow>
            <widget>
                <rewrite>
                    <adminhtml_widget_options>Bubble_Slideshow_Block_Adminhtml_Widget_Options</adminhtml_widget_options>
                </rewrite>
            </widget>
        </blocks>
    </global>
    <frontend>
        <layout>
            <updates>
                <bubble_slideshow>
                    <file>bubble/slideshow.xml</file>
                </bubble_slideshow>
            </updates>
        </layout>
    </frontend>
</config>